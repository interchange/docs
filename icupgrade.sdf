>                                = $locale
>                         if ! $::Scratch->{mv_language};
>                Vend::Util::setlocale(  $locale,
>                                                                ($::Scratch->{mv_currency} || undef),
>                                                                { persist => 1 }                                                        );
>        }

=item list_compat

