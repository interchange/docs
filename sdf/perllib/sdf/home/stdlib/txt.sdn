# Set the margin
!default TXT_MARGIN OPT_WIDTH

# Make TXT a restricted variable family
!restrict 'TXT'

# Declare document variables
!block variables; family="TXT"; export
Name                        Type            Rule
MARGIN                      integer
HDG_UL_OFF                  boolean
!endblock

# Define paragraph styles
!block parastyles
Name        To                      Attributes
!endblock

# Define phrase styles
!block phrasestyles
Name    To
!endblock

# Default build_title output
!macro build_txt_cover
P1: [[DOC_TITLE]]
!if DOC_STATUS
N: [[DOC_ID]] ([[DOC_STATUS]])
!elsif DOC_ID
N: [[DOC_ID]]
!endif
!if DOC_AUTHOR
N: [[join(", ", grep(/\w/, @var{'DOC_AUTHOR', 'DOC_AUTHOR2', 'DOC_AUTHOR3'}))]]
!endif
!endmacro
